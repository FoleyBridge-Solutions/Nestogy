                                        <span class="text-gray-600 dark:text-gray-400">Calculated</span>
                                    @endif
                                </td>
                                <td>
                                    @if($bundle->discount_type === 'percentage')
                                        <span class="text-cyan-600 dark:text-cyan-400">{{ $bundle->discount_value }}%</span>
                                    @elseif($bundle->discount_type === 'fixed')
                                        <span class="text-cyan-600 dark:text-cyan-400">${{ number_format($bundle->discount_value, 2) }}</span>
                                    @else
                                        <span class="text-gray-600 dark:text-gray-400">None</span>
                                    @endif
                                </td>
                                <td>
                                    @if($bundle->is_active)
                                        <span class="badge bg-success">Active</span>
                                    @else
                                        <span class="badge bg-gray-600">Inactive</span>
                                    @endif
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @can('view', $bundle)
                                            <a href="{{ route('bundles.show', $bundle) }}" class="btn px-3 py-1 text-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        @endcan
                                        @can('update', $bundle)
                                            <a href="{{ route('bundles.edit', $bundle) }}" class="btn px-3 py-1 text-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        @endcan
                                        @can('delete', $bundle)
                                            <button type="button" class="btn px-3 py-1 text-sm btn-outline-danger" 
                                                    onclick="confirmDelete('{{ $bundle->name }}', '{{ route('bundles.destroy', $bundle) }}')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        @endcan
                                    </div>
                                </td>

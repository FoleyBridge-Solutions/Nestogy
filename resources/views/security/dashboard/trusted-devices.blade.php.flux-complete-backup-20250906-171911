                                        @endif
                                        @if($device->ip_address)
                                            <button class="btn btn-outline-warning px-6 py-2 font-medium rounded-md transition-colors-sm" 
                                                    onclick="blockIpAddress('{{ $device->ip_address }}')">
                                                <i class="fas fa-shield-alt"></i> Block IP

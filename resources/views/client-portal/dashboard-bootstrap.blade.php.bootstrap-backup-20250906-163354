@push('scripts')
<script>
// Auto-dismiss alerts after 10 seconds
setTimeout(function() {
    $('.alert-dismissible').alert('close');
}, 10000);

// Refresh dashboard data every 5 minutes
setInterval(function() {
    location.reload();
}, 300000); // 5 minutes
</script>
@endpush


                                </td>
                                <td>
                                    @if($service->category)
                                        <span class="badge bg-secondary">{{ $service->category->name }}</span>
                                    @else
                                        <span class="text-muted">No category</span>
                                    @endif
                                </td>
                                <td>
                                    <strong>${{ number_format($service->price, 2) }}</strong>
                                    <br><small class="text-muted">{{ $service->getFormattedUnitType() }}</small>
                                </td>
                                <td>
                                    @if($service->billing_model === 'subscription')
                                        <span class="badge bg-info">Subscription</span>
                                        @if($service->billing_cycle)
                                            <br><small class="text-muted">{{ $service->getBillingCycleDescription() }}</small>
                                        @endif
                                    @elseif($service->billing_model === 'usage_based')
                                        <span class="badge bg-warning">Usage-based</span>
                                    @elseif($service->billing_model === 'hybrid')
                                        <span class="badge bg-purple">Hybrid</span>
                                    @else
                                        <span class="badge bg-success">One-time</span>
                                    @endif
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        {{ ucfirst($service->unit_type) }}
                                    </span>
                                </td>
                                <td>
                                    @if($service->is_active)
                                        <span class="badge bg-success">Active</span>
                                    @else
                                        <span class="badge bg-secondary">Inactive</span>
                                    @endif
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @can('view', $service)
                                            <a href="{{ route('services.show', $service) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        @endcan
                                        @can('update', $service)
                                            <a href="{{ route('services.edit', $service) }}" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        @endcan
                                        @can('delete', $service)
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmDelete('{{ $service->name }}', '{{ route('services.destroy', $service) }}')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        @endcan
                                    </div>
                                </td>
                            </tr>
                        @endforeach
                    </tbody>
                </table>
            </div>

            {{ $services->links() }}
        @else
            <div class="text-center py-5">
                <i class="fas fa-concierge-bell fa-3x text-muted mb-3"></i>

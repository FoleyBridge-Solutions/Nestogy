                            <option value="{{ $category->id }}" {{ request('category_id') == $category->id ? 'selected' : '' }}>
                                {{ $category->name }}
                            </option>
                        @endforeach
                    </select>

                    <select name="billing_model" class="form-select" style="max-width: 180px;">
                        <option value="">All Billing Models</option>
                        <option value="one_time" {{ request('billing_model') === 'one_time' ? 'selected' : '' }}>One-time</option>
                        <option value="subscription" {{ request('billing_model') === 'subscription' ? 'selected' : '' }}>Subscription</option>
                        <option value="usage_based" {{ request('billing_model') === 'usage_based' ? 'selected' : '' }}>Usage-based</option>
                        <option value="hybrid" {{ request('billing_model') === 'hybrid' ? 'selected' : '' }}>Hybrid</option>
                    </select>

                    <select name="unit_type" class="form-select" style="max-width: 150px;">
                        <option value="">All Unit Types</option>
                        <option value="hours" {{ request('unit_type') === 'hours' ? 'selected' : '' }}>Hours</option>
                        <option value="days" {{ request('unit_type') === 'days' ? 'selected' : '' }}>Days</option>
                        <option value="weeks" {{ request('unit_type') === 'weeks' ? 'selected' : '' }}>Weeks</option>
                        <option value="months" {{ request('unit_type') === 'months' ? 'selected' : '' }}>Months</option>
                        <option value="years" {{ request('unit_type') === 'years' ? 'selected' : '' }}>Years</option>
                        <option value="fixed" {{ request('unit_type') === 'fixed' ? 'selected' : '' }}>Fixed</option>
                    </select>

                    <select name="is_active" class="form-select" style="max-width: 120px;">
                        <option value="">All Status</option>
                        <option value="1" {{ request('is_active') === '1' ? 'selected' : '' }}>Active</option>
                        <option value="0" {{ request('is_active') === '0' ? 'selected' : '' }}>Inactive</option>
                    </select>

                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i>
                    </button>

                    @if(request()->hasAny(['search', 'category_id', 'billing_model', 'unit_type', 'is_active']))
                        <a href="{{ route('services.index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times"></i>
                        </a>
                    @endif
                </form>
            </div>
        </div>

        @if($services->count() > 0)
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Service</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Billing Model</th>
                            <th>Unit Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach($services as $service)
                            <tr>
                                <td>
                                    <div>
                                        <strong>{{ $service->name }}</strong>
                                        @if($service->sku)
                                            <br><small class="text-muted">SKU: {{ $service->sku }}</small>
                                        @endif
                                        @if($service->description)
                                            <br><small class="text-muted">{{ Str::limit($service->description, 60) }}</small>
                                        @endif

@section('scripts')
<script>
// Update active timer displays every second
function updateActiveTimers() {
    @foreach($activeTimers as $timer)
    const timerElement{{ $timer->id }} = document.getElementById('timer-{{ $timer->id }}');
    if (timerElement{{ $timer->id }}) {
        const startTime = new Date('{{ $timer->started_at->toISOString() }}');
        const now = new Date();
        const elapsedSeconds = Math.floor((now - startTime) / 1000);
        
        const hours = Math.floor(elapsedSeconds / 3600);
        const minutes = Math.floor((elapsedSeconds % 3600) / 60);
        const seconds = elapsedSeconds % 60;
        
        timerElement{{ $timer->id }}.textContent = 
            String(hours).padStart(2, '0') + ':' + 
            String(minutes).padStart(2, '0') + ':' + 
            String(seconds).padStart(2, '0');
    }
    @endforeach
}

// Update timers every second if there are active timers
@if($activeTimers->count() > 0)
setInterval(updateActiveTimers, 1000);
@endif
</script>
@endsection
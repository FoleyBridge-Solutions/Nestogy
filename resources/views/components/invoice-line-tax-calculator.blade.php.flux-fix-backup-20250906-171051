    border-color: #198754;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='m2.3 6.73.93.93 4.83-4.83-.93-.93-3.9 3.9L.7 4.24z'/%3e%3c/svg%3e");

{{-- Product Selector Header Component --}}
<div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-6">
        <div class="flex flex-wrap -mx-4 items-center">
            <div class="md:w-1/2 px-6">

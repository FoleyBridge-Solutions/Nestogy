                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text"
                           x-ref="searchInput"
                           x-model="searchQuery"
                           @input.debounce.300ms="quickSearch()"
                           class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                           placeholder="Search products, services, or bundles... (Press / to focus)">
                </div>
            </div>
            
            <div class="md:w-1/2 px-6">
                <div class="flex justify-end gap-1">
                    <button type="button"
                            @click="showFilters = !showFilters"
                            class="inline-flex items-center px-6 py-2 border border-gray-300 text-gray-600 bg-white rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                            :class="{ 'bg-blue-600 text-white border-blue-600': showFilters }">
                        <i class="fas fa-filter"></i>
                        <span class="ml-1">Filters</span>
                        <span x-show="hasFiltersApplied" class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-1" x-text="Object.values(filters).filter(f => f).length"></span>
                    </flux:button>
                    
                    <button type="button"
                            @click="viewMode = 'grid'"
                            class="inline-flex items-center px-6 py-2 border border-gray-300 text-gray-600 bg-white rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                            :class="{ 'bg-blue-600 text-white border-blue-600': viewMode === 'grid' }">
                        <i class="fas fa-th"></i>
                    </flux:button>
                    
                    <button type="button"
                            @click="viewMode = 'list'"
                            class="inline-flex items-center px-6 py-2 border border-gray-300 text-gray-600 bg-white rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                            :class="{ 'bg-blue-600 text-white border-blue-600': viewMode === 'list' }">
                        <i class="fas fa-list"></i>
                    </flux:button>
                </div>
            </div>
        </div>
        
        {{-- Filter Panel --}}
        <div x-show="showFilters" x-collapse class="mt-6 pt-4 border-t border-gray-200">
            <div class="flex flex-wrap -mx-4">
                <div class="md:w-1/4 px-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Category</flux:label>
                    <select x-model="filters.category" @change="applyFilters()"
                            class="block w-full px-6 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">All Categories</option>
                        <template x-if="Array.isArray(categories)">
                            <template x-for="category in categories" :key="category.id">
                                <option :value="category.id" x-text="category.name"></option>
                            </template>
                        </template>
                    </flux:select>
                </div>
                
                <div class="md:w-1/4 px-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Billing Model</flux:label>
                    <select x-model="filters.billingModel" @change="applyFilters()"
                            class="block w-full px-6 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <option value="">All Billing Models</option>
                        <option value="one_time">One-time</option>
                        <option value="monthly">Monthly</option>
                        <option value="annual">Annual</option>
                    </flux:select>
                </div>
                
                <div class="md:w-1/3 px-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Price Range</flux:label>
                    <div class="flex items-center gap-2">
                        <input type="number" x-model="filters.priceRange.min" @change="applyFilters()"
                               placeholder="Min" min="0" step="0.01"
                               class="block w-full px-6 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        <span class="text-gray-500">-</span>
                        <input type="number" x-model="filters.priceRange.max" @change="applyFilters()"
                               placeholder="Max" min="0" step="0.01"
                               class="block w-full px-6 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    </div>
                </div>
                
                <div class="md:w-1/6 px-6">
                    <label class="block text-sm font-medium text-gray-700 mb-1">&nbsp;</flux:label>
                    <button type="button" @click="clearFilters()"
                            class="w-full inline-flex justify-center items-center px-6 py-1 border border-red-300 text-red-600 bg-white rounded hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-sm">
                        <i class="fas fa-times mr-1"></i>Clear
                    </flux:button>
                </div>
            </div>
        </div>
    </div>
</div>
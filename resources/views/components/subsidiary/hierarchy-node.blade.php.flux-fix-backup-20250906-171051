@props([
    'company' => [],
    'companies' => [],
    'selectedCompanyId' => null,
    'showActions' => true,
    'interactive' => true,
    'level' => 0
])

@php
    $isSelected = $selectedCompanyId && $selectedCompanyId == $company['id'];
    $hasChildren = collect($companies)->where('parent_id', $company['id'])->count() > 0;
    $indentClass = $level > 0 ? 'ml-' . ($level * 6) : '';
    $statusColor = match($company['status'] ?? 'active') {
        'active' => 'text-green-600 bg-green-100',
        'suspended' => 'text-yellow-600 bg-yellow-100',
        'inactive' => 'text-red-600 bg-red-100',
        default => 'text-gray-600 bg-gray-100'
    };
    $typeIcon = match($company['company_type'] ?? 'subsidiary') {
        'root' => 'building-office',
        'subsidiary' => 'building-office-2',
        'branch' => 'building-storefront',
        default => 'building-office-2'
    };
@endphp

<div class="hierarchy-node {{ $isSelected ? 'selected' : '' }} {{ $indentClass }}"
     data-company-id="{{ $company['id'] }}"
     data-level="{{ $level }}">
    
    <div class="flex items-center p-6 border border-gray-200 rounded-lg bg-white shadow-sm hover:shadow-md transition-shadow duration-150">
        <!-- Expand/Collapse Button -->
        @if($hasChildren)
            <button class="expand-toggle mr-2 p-1 rounded hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                <svg class="expand-icon w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </flux:button>
        @else
            <div class="w-6 mr-2"></div>
        @endif

        <!-- Company Icon -->
        <div class="flex-shrink-0 mr-3">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center">
                @if($typeIcon === 'building-office')
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                @elseif($typeIcon === 'building-office-2')
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                    </svg>
                @else
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                @endif
            </div>
        </div>

        <!-- Company Information -->
        <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">
                        {{ $company['name'] }}
                    </p>
                    <p class="text-sm text-gray-500 truncate">
                        {{ ucfirst($company['company_type'] ?? 'subsidiary') }}
                        @if(!empty($company['access_level']))
                            â€¢ {{ ucfirst($company['access_level']) }} Access
                        @endif
                    </p>
                </div>
                
                <!-- Status Badge -->
                <div class="flex items-center space-x-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ $statusColor }}">
                        {{ ucfirst($company['status'] ?? 'active') }}
                    </span>
                    
                    @if($hasChildren)
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium text-gray-500 bg-gray-100">
                            {{ collect($companies)->where('parent_id', $company['id'])->count() }} 
                            {{ Str::plural('subsidiary', collect($companies)->where('parent_id', $company['id'])->count()) }}
                        </span>
                    @endif
                </div>
            </div>

            <!-- Additional Details -->
            @if(!empty($company['email']) || !empty($company['billing_type']))
                <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
                    @if(!empty($company['email']))
                        <span class="flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                            </svg>
                            {{ $company['email'] }}
                        </span>
                    @endif
                    @if(!empty($company['billing_type']))
                        <span class="flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                            {{ ucfirst(str_replace('_', ' ', $company['billing_type'])) }}
                        </span>
                    @endif
                </div>
            @endif
        </div>

        <!-- Action Buttons -->
        @if($showActions && $interactive)
            <div class="flex items-center space-x-2 ml-4">
                <!-- View Button -->
                <a href="{{ route('subsidiaries.show', $company['id']) }}" 
                   class="action-button inline-flex items-center p-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                </a>

                <!-- Edit Button -->
                <a href="{{ route('subsidiaries.edit', $company['id']) }}" 
                   class="action-button inline-flex items-center p-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                </a>

                <!-- Dropdown Actions -->
                <div class="relative inline-block text-left" x-data="{ open: false }">
                    <button @click="open = !open" 
                            class="action-button inline-flex items-center p-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                    </flux:button>

                    <div x-show="open" 
                         @click.outside="open = false"
                         x-transition:enter="transition ease-out duration-100"
                         x-transition:enter-start="transform opacity-0 scale-95"
                         x-transition:enter-end="transform opacity-100 scale-100"
                         x-transition:leave="transition ease-in duration-75"
                         x-transition:leave-start="transform opacity-100 scale-100"
                         x-transition:leave-end="transform opacity-0 scale-95"
                         class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
                        <div class="py-1">
                            <a href="{{ route('subsidiaries.permissions', $company['id']) }}" 
                               class="block px-6 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                Manage Permissions
                            </a>
                            <a href="{{ route('subsidiaries.users', $company['id']) }}" 
                               class="block px-6 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                Manage Users
                            </a>
                            @if($company['company_type'] !== 'root')
                                <div class="border-t border-gray-100"></div>
                                <button onclick="confirmAction('move', {{ $company['id'] }})" 
                                        class="block w-full text-left px-6 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    Move to Different Parent
                                </flux:button>
                                <button onclick="confirmAction('remove', {{ $company['id'] }})" 
                                        class="block w-full text-left px-6 py-2 text-sm text-red-600 hover:bg-red-50">
                                    Remove from Hierarchy
                                </flux:button>
                            @endif
                        </div>
                    </div>
                </div>
            </div>
        @endif
    </div>

    <!-- Child Nodes -->
    @if($hasChildren)
        <div class="child-nodes mt-2 {{ $level === 0 ? '' : 'hidden' }}">
            @foreach(collect($companies)->where('parent_id', $company['id']) as $childCompany)
                <x-subsidiary.hierarchy-node 
                    :company="$childCompany"
                    :companies="$companies"
                    :selected-company-id="$selectedCompanyId"
                    :show-actions="$showActions"
                    :interactive="$interactive"
                    :level="$level + 1"
                />
            @endforeach
        </div>
    @endif
</div>
<script>
function contractEditor(contract) {
    // Ensure contract is properly initialized
    contract = contract || {};
    
    return {
        activeTab: 'basic',
        contract: contract,
        acknowledgeBillingImpact: {{ $contract->billingCalculations()->count() === 0 ? 'true' : 'false' }},
        form: {
            title: contract.title || '',
            contract_type: contract.contract_type || '',
            client_id: contract.client_id || '',
            description: contract.description || '',
            start_date: contract.start_date || '',
            end_date: contract.end_date || '',
            contract_value: contract.contract_value || '',
            status: contract.status || 'draft',
            billing_model: contract.billing_model || 'fixed',
            auto_assign_new_assets: contract.auto_assign_new_assets || false,
            auto_assign_new_contacts: contract.auto_assign_new_contacts || false,
            auto_generate_invoices: contract.auto_generate_invoices || false,
            content: contract.content || ''
        },
        
        get canEdit() {
            return {{ $contract->canBeEdited() ? 'true' : 'false' }};
        },
        
        get canSave() {
            return this.form.title && 
                   this.form.contract_type && 
                   this.form.client_id && 
                   this.form.start_date && 
                   this.form.contract_value &&
                   this.acknowledgeBillingImpact;
        },
        
        selectBillingModel(model) {
            if (!this.canEdit) return;
            this.form.billing_model = model;
        },
        
        getAssetCount(type) {
            // This would be populated from backend data
            const counts = this.contract.asset_type_counts || {};
            return counts[type] || 0;
        },
        
        getContactCount(accessLevel) {
            // This would be populated from backend data
            const counts = this.contract.contact_access_counts || {};
            return counts[accessLevel] || 0;
        },
        
        openAssetAssignmentModal() {
            // This would open a modal for managing asset assignments
            alert('Asset assignment interface will open here');
        },
        
        openContactAssignmentModal() {
            // This would open a modal for managing contact assignments
            alert('Contact assignment interface will open here');
        },
        
        regenerateFromTemplate() {
            if (confirm('This will replace the current contract content with the template content. Continue?')) {
                // Logic to regenerate content from template
                alert('Content regeneration from template will be implemented');
            }
        },
        
        prepareSubmission(event) {
            // Form submission handled by x-model bindings
        }
    }
}

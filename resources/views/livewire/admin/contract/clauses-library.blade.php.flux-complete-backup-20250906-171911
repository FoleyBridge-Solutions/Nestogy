                    <div class="p-6">
                        <div class="grid grid-cols-2 gap-4 text-center">
                            <div>
                                <div class="text-2xl font-bold text-blue-600">{{ $stats['total'] }}</div>
                                <div class="text-sm text-gray-500">Total</div>
                            </div>

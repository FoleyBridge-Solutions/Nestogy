        @forelse($teamMembers->sortByDesc('workload_score') as $member)
            <div class="border border-zinc-200 dark:border-zinc-700 rounded-lg p-3 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between gap-3">
                    <div class="flex items-start gap-3 flex-1">
                        <!-- Avatar -->
                        <div class="w-10 h-10 rounded-full bg-{{ match($member['utilization']) {
                            'available' => 'green',
                            'moderate' => 'blue',
                            'busy' => 'amber',
                            'overloaded' => 'red',
                            default => 'zinc'

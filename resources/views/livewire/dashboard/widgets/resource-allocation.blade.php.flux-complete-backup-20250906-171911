                                        <flux:badge size="xs" color="orange">{{ $member['tickets']['high'] }} High</flux:badge>
                                    @endif
                                </div>
                                
                                <!-- Capacity Bar -->
                                <div class="mt-2">
                                    <div class="flex items-center justify-between mb-1">
                                        <flux:text size="xs" class="text-zinc-500">Capacity</flux:text>

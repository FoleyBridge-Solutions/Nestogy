<script>
async function confirmDelete(name, url) {
    const confirmed = await confirmAction(
        `Are you sure you want to delete the pricing rule "${name}"? This action cannot be undone.`,
        {
            title: 'Delete Pricing Rule',
            confirmText: 'Delete Rule',
            cancelText: 'Cancel',
            type: 'error'
        }
    );
    
    if (confirmed) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = url;
        form.innerHTML = `
            @csrf
            @method('DELETE')
        `;
        document.body.appendChild(form);
        form.submit();
    }
}

@if($pricingRule->target_type === 'product' && $pricingRule->product)
function calculatePrice() {
    const quantity = parseInt(document.getElementById('calc_quantity').value) || 1;
    const originalPrice = {{ $pricingRule->product->price }};
    const ruleType = '{{ $pricingRule->rule_type }}';
    
    let finalPrice = originalPrice;
    
    @if($pricingRule->rule_type === 'discount')
        @if($pricingRule->discount_type === 'percentage')
            finalPrice = originalPrice * (1 - {{ $pricingRule->discount_value }} / 100);
        @else
            finalPrice = originalPrice - {{ $pricingRule->discount_value }};
        @endif
    @elseif($pricingRule->rule_type === 'markup')
        @if($pricingRule->markup_type === 'percentage')
            finalPrice = originalPrice * (1 + {{ $pricingRule->markup_value }} / 100);
        @else
            finalPrice = originalPrice + {{ $pricingRule->markup_value }};
        @endif
    @elseif($pricingRule->rule_type === 'fixed_price')
        finalPrice = {{ $pricingRule->fixed_price }};
    @elseif($pricingRule->rule_type === 'tiered' && $pricingRule->pricing_tiers)
        const tiers = @json($pricingRule->pricing_tiers);
        for (let tier of tiers) {
            if (quantity >= tier.min_quantity && (!tier.max_quantity || quantity <= tier.max_quantity)) {
                finalPrice = tier.price;
                break;
            }
        }
    @endif
    
    finalPrice = Math.max(0, finalPrice); // Ensure price doesn't go negative
    const totalPrice = finalPrice * quantity;
    
    document.getElementById('calculated_price').textContent = 
        `$${finalPrice.toFixed(2)} Ã— ${quantity} = $${totalPrice.toFixed(2)}`;
}

// Auto-calculate when quantity changes
document.getElementById('calc_quantity').addEventListener('input', calculatePrice);
@endif
</script>
@endsection
# Stripe Configuration for SaaS Subscriptions
# Copy these settings to your .env file and update with your actual Stripe keys

# Stripe API Keys
STRIPE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (from your Stripe dashboard)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Additional Stripe Configuration
CASHIER_CURRENCY=usd
CASHIER_CURRENCY_LOCALE=en

# SaaS Configuration
SAAS_PLATFORM_COMPANY_ID=1
SAAS_DEFAULT_TRIAL_DAYS=14

# Email Configuration (for trial notifications)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@nestogy.com
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration (required for background jobs)
QUEUE_CONNECTION=database

# Session Configuration (important for signup flow)
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Additional Security Settings
APP_URL=https://yourdomain.com
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com
{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "fluxui-server": {
      "type": "local",
      "command": ["npx", "-y", "fluxui-mcp-server"],
      "enabled": true
    },
    "livewire-server": {
      "type": "local",
      "command": ["npx", "-y", "github:benjibee/livewire-mcp-server"],
      "enabled": true
    },
    "laravel-server": {
      "type": "local",
      "command": ["laravel-mcp-server"],
      "enabled": true
    },
    "postgrid": {
      "type": "remote",
      "url": "https://postgrid.readme.io/mcp",
      "enabled": true
    }
  }
}
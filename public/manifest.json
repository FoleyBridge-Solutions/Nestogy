  "categories": ["business", "productivity", "finance"],
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  
  "prefer_related_applications": false,
  
  "shortcuts": [
    {
      "name": "New Quote",
      "short_name": "New Quote",
      "description": "Create a new quote",
      "url": "/quotes/create",
      "icons": [
        {
          "src": "/images/icons/new-quote-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Quote Templates",
      "short_name": "Templates",
      "description": "Browse quote templates",
      "url": "/quote-templates",
      "icons": [
        {
          "src": "/images/icons/templates-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Recent Quotes",
      "short_name": "Recent",
      "description": "View recent quotes",
      "url": "/quotes?filter=recent",
      "icons": [
        {
          "src": "/images/icons/recent-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Quote Analytics",
      "short_name": "Analytics",
      "description": "View quote statistics and analytics",
      "url": "/quotes/analytics",
      "icons": [
        {
          "src": "/images/icons/analytics-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/quotes/import",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": [
            ".pdf",
            ".doc",
            ".docx",
            ".xls",
            ".xlsx",
            ".csv"
          ]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/quotes/import",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "text/csv": [".csv"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+nestogy",
      "url": "/handle-protocol?action=%s"
    }
  ],
  
  "capture_links": "existing-client-navigate",
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://app.nestogy.com/manifest.json"
    }
  ]
}